<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.ksolodky.a.LocationActivity">

    <EditText
        android:id="@+id/etLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="55dp"
        android:layout_above="@+id/etLatitude"
        android:layout_alignLeft="@+id/etLatitude"
        android:layout_alignStart="@+id/etLatitude" />

    <EditText
        android:id="@+id/etLocationType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Type"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="98dp"
        android:layout_above="@+id/etLocationName"
        android:layout_alignLeft="@+id/etLocationName"
        android:layout_alignStart="@+id/etLocationName" />

    <EditText
        android:id="@+id/etLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Latitude"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="141dp"
        android:layout_above="@+id/etLongitude"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvAddLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="New Location"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Location"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="199dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Longitude"
        android:layout_above="@+id/btAdd"
        android:layout_alignLeft="@+id/etLatitude"
        android:layout_alignStart="@+id/etLatitude" />
</RelativeLayout>
